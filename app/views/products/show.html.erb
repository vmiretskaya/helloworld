<p id="notice"><%= notice %></p>

<div class="show-product">
<div class="show-img-product">
<p>
  <%= image_tag(@product.image_url, style: "max-height: 400px; max-width: 400px;") %>
</p>
</div>
<div class="show-inf-product">
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
<p>
  <strong>Color:</strong>
  <%= @product.color %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>
</div>
<!-- Pay button-->
<%if @product.price?%>
  <%= form_tag "/payments/create" do %>
    <%= hidden_field_tag :product_id, @product.id %>
    <%= render partial: "shared/stripe_checkout_button" %>
  <% end %>
<% end %>
</div>
<div class="show-comm-product">
  <%= render 'new_comment' %>
  <%= render 'comments' %>
</div>
<div class = "links">
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>
